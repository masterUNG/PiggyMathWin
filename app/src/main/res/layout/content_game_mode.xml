<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AbsoluteLayout"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.androidcai.administrator.piggymath.game_mode"
    tools:showIn="@layout/activity_game_mode"
    android:background="@drawable/scene1"
    android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="352dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_x="50dp"
            android:layout_y="0dp"
            android:gravity="center"
            android:text="00"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_x="300dp"
            android:layout_y="4dp"
            android:gravity="center"
            android:text="score:0"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="47dp"
        android:layout_y="380dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="131dp"
                android:layout_height="40dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/or"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="129dp"
                android:layout_height="42dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/or"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="2dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="133dp"
                android:layout_height="51dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/or"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="131dp"
                android:layout_height="53dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/or"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="30dp" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="258dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/eat1"
        android:id="@+id/icecream"
        android:layout_x="49dp"
        android:layout_y="47dp"
        android:src="@drawable/eat1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_x="-3dp"
        android:layout_y="9dp">

        <ImageView
            android:src="@drawable/num0"
            android:id="@+id/imageView1"
            android:layout_weight="0.66"
            android:layout_gravity="bottom"
            android:layout_width="25dp"
            android:layout_height="40dp" />

        <ImageView
            app:srcCompat="@drawable/plus"
            android:id="@+id/imageView2"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:src="@drawable/plus"
            android:layout_width="25dp"
            android:layout_height="40dp" />

        <ImageView
            android:src="@drawable/num0"
            android:layout_width="25dp"
            android:id="@+id/imageView3"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:layout_height="40dp" />

        <ImageView
            android:layout_width="25dp"
            app:srcCompat="@drawable/equal"
            android:id="@+id/imageView4"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:src="@drawable/equal"
            android:layout_height="40dp" />

        <ImageView
            android:layout_width="25dp"
            app:srcCompat="@drawable/question"
            android:id="@+id/imageView5"
            android:layout_weight="1"
            android:src="@drawable/question"
            android:layout_gravity="bottom"
            android:layout_height="40dp" />

    </LinearLayout>

</AbsoluteLayout>
