<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_choose_level"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.androidcai.administrator.piggymath.choose_level"
    tools:showIn="@layout/activity_choose_level"
    android:background="@drawable/scene1"
    android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/imageHard2"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_x="0dp"
        android:layout_y="293dp"
        android:src="@drawable/hard2_03" />

    <!--Logo-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/chlogo"
        android:id="@+id/imageView5" />

    <!--Easy-->
    <ImageView
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/easy"
        android:id="@+id/imageEasy"
        android:layout_x="1dp"
        android:layout_y="360dp"
        android:src="@drawable/easy" />

    <!--Normal-->
    <ImageView
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/normal"
        android:id="@+id/imageNormal"
        android:layout_x="110dp"
        android:layout_y="339dp"
        android:src="@drawable/normal" />

    <!--Hard-->
    <ImageView
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageHard"
        android:src="@drawable/hard"
        android:layout_x="200dp"
        android:layout_y="307dp" />



</AbsoluteLayout>
